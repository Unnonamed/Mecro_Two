{
    "vocab_fp": "cnocr/label_cn.txt",
    "img_folder": "data/images",

    "gpus": 0,
    "epochs": 20,
    "batch_size": 4,
    "num_workers": 0,
    "pin_memory": false,
    "optimizer": "adam",
    "learning_rate": 1e-3,
    "weight_decay": 0,
    "lr_scheduler": {
        "name": "cos_warmup",
        "min_lr_mult_factor": 0.01,
        "warmup_epochs": 0.2
    },
    "precision": 32,
    "limit_train_batches": 1.0,
    "limit_val_batches": 1.0,
    "pl_checkpoint_monitor": "complete_match_epoch",
    "pl_checkpoint_mode": "max"
}
